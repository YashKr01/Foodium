<resources>
    <!-- Base application theme. -->
    <style name="Theme.Foodium" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/color_primary</item>
    </style>

    <style name="Theme.Foodium.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Foodium.CollapsedTitle">
        <item name="android:fontFamily">@font/cougrette</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="Theme.Foodium.ExpandedTitle">
        <item name="android:fontFamily">@font/cougrette</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="Theme.Foodium.InActiveChip">
        <item name="chipBackgroundColor">@color/color_white</item>
        <item name="chipStrokeColor">@color/colorInactiveChipStroke</item>
        <item name="android:textColor">@color/colorInactiveText</item>
        <item name="chipStrokeWidth">1.5dp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="chipIcon">@drawable/ic_check</item>
        <item name="textStartPadding">2dp</item>
        <item name="chipIconSize">@dimen/_14sdp</item>
        <item name="chipIconTint">@color/colorInactiveText</item>
        <item name="iconStartPadding">@dimen/_4sdp</item>
    </style>

    <style name="Theme.Foodium.ActiveChip">
        <item name="chipBackgroundColor">@color/color_white</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="chipStrokeColor">@color/color_green</item>
        <item name="chipStrokeWidth">1.5dp</item>
        <item name="chipIcon">@drawable/ic_check</item>
        <item name="textStartPadding">2dp</item>
        <item name="chipIconSize">@dimen/_14sdp</item>
        <item name="chipIconTint">@color/color_green</item>
        <item name="android:textColor">@color/color_green</item>
        <item name="iconStartPadding">@dimen/_4sdp</item>
    </style>

    <style name="Theme.Foodium.ChipTextAppearance">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="Theme.Foodium.ChipItem">
        <item name="android:clickable">false</item>
        <item name="textStartPadding">3dp</item>
        <item name="android:focusable">false</item>
        <item name="chipBackgroundColor">@color/color_white</item>
        <item name="chipIconSize">@dimen/_14sdp</item>
        <item name="chipStrokeWidth">1.5dp</item>
        <item name="iconStartPadding">4dp</item>
    </style>

</resources>